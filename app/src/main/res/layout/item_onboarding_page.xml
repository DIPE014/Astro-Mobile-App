<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_extra_large">

    <!-- Icon -->
    <ImageView
        android:id="@+id/ivOnboardingIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@null"
        app:tint="@color/primary" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AstroApp.HeadlineMedium"
        android:textColor="@color/text_primary" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvOnboardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/TextAppearance.AstroApp.BodyLarge"
        android:textColor="@color/text_secondary" />

</LinearLayout>
